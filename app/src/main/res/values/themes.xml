<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Cupcake" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="actionBarStyle">@style/Widget.App.Toolbar</item>
        <item name="colorNoResults">@color/accent</item>
        <item name="colorEmptyState">@color/secondary</item>
        <item name="colorError">@color/design_default_color_error</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/light</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.Cupcake.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Cupcake.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Cupcake.NoActionBar" parent="Theme.Cupcake">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.Cupcake">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
    </style>
</resources>