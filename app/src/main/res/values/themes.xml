<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Cupcake" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="colorNoResults">@color/accent</item>
        <item name="colorEmptyState">@color/secondary</item>
        <item name="colorError">@color/design_default_color_error</item>

    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/light</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Cupcake.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Cupcake.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Cupcake.NoActionBar" parent="Theme.Cupcake">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>